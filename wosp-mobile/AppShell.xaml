<Shell
    x:Class="wosp_mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:wosp_mobile"
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Logowanie"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Start"
        Route="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent
        Title="Lista Wolontariuszy"
        Route="VolunteerListPage"
        ContentTemplate="{DataTemplate local:VolunteerListPage}" />
    <ShellContent
        Title="Podsumowanie Statystyk"
        Route="StatisticsSummaryPage"
        ContentTemplate="{DataTemplate local:StatisticsSummaryPage}" />
    <ShellContent
        Title="Statystyki LiczÄ…cych"
        Route="StatisticsCountingPage"
        ContentTemplate="{DataTemplate local:StatisticsCountingPage}" />
    <ShellContent
        Title="Statystyki Wolontariuszy"
        Route="StatisticsVolunteerPage"
        ContentTemplate="{DataTemplate local:StatisticsVolunteerPage}" />
    <ShellContent
        Title="Rozliczenie"
        Route="SettlementPage"
        ContentTemplate="{DataTemplate local:SettlementPage}" />
</Shell>
